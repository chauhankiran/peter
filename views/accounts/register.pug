extend ../layout

block content 
    .row
        .col-1.mt-4  
            
        .col-3.mt-4 
            h1.mb-4 Register 

            include ../includes/flash
            
            form(action="/register", method="post") 
                input(type="hidden", name="inviteToken", value=inviteToken)
                input(type="hidden", name="inviteEmail", value=inviteEmail)
                input(type="hidden", name="_csrf", value=csrfToken)

                .mb-4
                    label(for="name") Name
                        span.red *
                    input(type="text", name="name", id="name", placeholder="Kai Doe", value=name, autofocus=true) 
                .mb-4
                    label(for="email") Email
                        span.red *
                    if inviteEmail
                        input(type="email", name="email", id="email", placeholder="kai@doe.com", value=inviteEmail, disabled=true)
                    else
                        input(type="email", name="email", id="email", placeholder="kai@doe.com", value=email)
                .mb-4
                    label(for="password") Password
                        span.red *
                    input(type="password", name="password", id="password" placeholder="******")
                .mb-4
                    label(for="confirmPassword") Confirm password
                        span.red *
                    input(type="password", name="confirmPassword", id="confirmPassword" placeholder="******")
    
                .mb-4.pt-2
                    button(type="submit") Register
        .col-8.mt-4
