extend ../layout

block content 
    .container-fluid 
        .row
            .col-1.mt-4  
            .col-3.mt-4 
                h1.mb-4 Login 

                include ../includes/flash

                form(action="/login", method="post") 
                    .mb-4
                        label(for="email") Email
                            span.red *
                        input(type="text", name="email", id="email", placeholder="kai@doe.com", autofocus=true)
        
                    .mb-4
                        label(for="password") Password
                            span.red *
                        input(type="password", id="password", name="password", placeholder="******")
        
                    .mb-4.pt-2
                        button(type="submit") Login
            .col-8.mt-4
