nav.nav 
    if isLoggedIn
        .nav-start 
            a(href="/").nav-brand Peter
            a(href="/dashboard").nav-item Dashboard
            if permissions && permissions.projects && permissions.projects.read
                a(href="/projects").nav-item Projects
            if permissions && permissions.work && permissions.work.read
                a(href="/work").nav-item Work
            if permissions && permissions.work && permissions.work.create
                a(href="/work/new").nav-item New work
        .nav-end 
            if role === 'admin' || role === 'owner'
                a(href="/admin").nav-item.red Admin
            a(href="/settings").nav-item Settings
            a(href="/logout").nav-item Logout
    else
        .nav-start 
            a(href="/").nav-brand Peter
        .nav-end 
            a(href="/login").nav-item Login 
            a(href="/register").nav-item Register